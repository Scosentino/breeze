<p id="notice"><%= notice %></p>

<h1 class="product-header">Listing Products</h1>

<div class="container">
  <% @products.in_groups_of(4,false).each do |group| %>
    <div class="row">
      <% group.each do |product| %>
        <div class="col-md-3">
          <%= product.image_url %>
          <h3><%= product.name %></h3>
          <p><%= product.price %></p>
          <p><%= product.description %></p>
          <p><%= product.colour %></p>
          <p><%= link_to 'Show', product %></p>
          <p><%= link_to 'Edit', edit_product_path(product) %></p>
          <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= link_to 'New Product', new_product_path %>  
</div>




